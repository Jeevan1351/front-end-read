<%- include('header.ejs') %>
<p></p>
<p></p>
<p>The number of days worked: <%=total_days%></p>
<div id="chart">
  <canvas id="myChart"></canvas>
</div>
<script>
  console.log("<%=lables%>");
  var headings = "<%=lables%>".split(",");
  var values = [];
  "<%=data%>".split(",").forEach((v) => values.push(parseInt(v)));
  var ctx = document.getElementById("myChart");
  var myChart = new Chart(ctx, {
    type: "bar",
    data: {
      labels: headings,
      datasets: [
        {
          label: "Number of days",
          data: values,
          backgroundColor: [
            "rgba(255, 99, 132, 0.8)",
            "rgba(54, 162, 235, 0.8)",
            "rgba(255, 206, 86, 0.8)",
            "rgba(75, 192, 192, 0.8)",
            "rgba(153, 102, 255, 0.8)",
            "rgba(255, 159, 64, 0.8)",
          ],
          borderColor: [
            "rgba(255, 99, 132, 1)",
            "rgba(54, 162, 235, 1)",
            "rgba(255, 206, 86, 1)",
            "rgba(75, 192, 192, 1)",
            "rgba(153, 102, 255, 1)",
            "rgba(255, 159, 64, 1)",
          ],
          borderWidth: 1,
        },
      ],
    },
    options: {
      scales: {
        y: {
          beginAtZero: true,
        },
      },
    },
  });
</script>
